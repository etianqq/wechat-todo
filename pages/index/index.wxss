/**index.wxss**/
.todo-wrapper {
  text-align: left;
  margin:20px 0 30px;
  width: 100%;
}

.todo-item {
  margin-left: 20px;
  margin-bottom: 15px;
  position: relative;
}

.todo-item .createTime {
  display: block;
  font-size:28rpx;
  color:#9e9c9c;
  margin-bottom:5px;
}

.todo-create-btn {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.notice-wrapper {
  width:100%;
  margin-top:30px;
}

.notice {
  font-size:28rpx;
  color:#9e9c9c;
  margin-left:20px;
}
