/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.todo-wrapper {
  text-align: left;
  margin:20px 0 30px;
  width: 100%;
}

.todo-item {
  margin-left: 20px;
  margin-bottom: 15px;
  position: relative;
}

.todo-item .createTime {
  display: block;
  font-size:28rpx;
  color:#9e9c9c;
  margin-bottom:5px;
}

.todo-create-btn {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-delete {
  position:absolute;
  top:0;
  right:20px;
}

.notice-wrapper {
  width:100%;
  margin-top:30px;
}

.notice {
  font-size:28rpx;
  color:#9e9c9c;
  margin-left:20px;
}
