<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>

  <view class="notice-wrapper">
    <text class="notice">(注意：在TODO列表上滑动可以删除该TODO)</text>
  </view>
  
  <view class="todo-wrapper">
    <view class="todo-item" wx:for="{{todos}}" wx:key="id" bindtouchend="showDeleteBtn" id="{{index}}">
      <text class="createTime">{{index+1}}. {{item.createTimeText}}</text>
      <icon type="clear" color="red" hidden="{{item.isDelete? false: true}}" catchtap="deleteTodo"
      class="icon-delete" data-index="{{index}}"></icon>
      <text class="text">{{item.text}}</text>
    </view>
  </view>
  
  <button class="todo-create-btn" type="primary" size="default" bindtap="createTodo">创建新的TODO 
  </button>
  
</view>
